<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:clipToPadding="false">

                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:padding="10dp"
                        android:elevation="4dp">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fullmetal Alchemist: Brotherhood"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:textColor="#FFFFFF"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_centerHorizontal="true"/>

                        <View
                            android:id="@+id/titleDivider"
                            android:layout_below="@id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:id="@+id/ivCover"
                            android:layout_below="@id/titleDivider"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/test"
                            android:layout_centerHorizontal="true"
                            android:adjustViewBounds="true"
                            android:paddingBottom="30dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/detailsSection"
                        android:layout_below="@id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/tvTypeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvType"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TV"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd"/>

                        <TextView
                            android:id="@+id/tvEpisodesLabel"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Episodes"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvEpisodes"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvType"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="64"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd"/>

                        <TextView
                            android:id="@+id/tvDurationLabel"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvEpisodes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvDuration"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvEpisodes"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24 min."
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd"/>

                        <TextView
                            android:id="@+id/tvStatusLabel"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvDuration"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Finished Airing"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd"/>

                        <TextView
                            android:id="@+id/tvAiredLabel"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aired"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvAired"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvStatus"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apr 5, 2009 to Jul 4, 2010"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd" />

                        <TextView
                            android:id="@+id/tvScoreLabel"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvAired"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvScore"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvAired"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.62"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd" />

                        <TextView
                            android:id="@+id/tvRatingLabel"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvScore"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R-17+"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd" />

                        <TextView
                            android:id="@+id/tvGenresLabel"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genres"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvGenres"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tvRating"
                            android:layout_toRightOf="@id/tvGenresLabel"
                            android:paddingLeft="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Action, Adventure, Drama, Fantasy, Magic, Military, Shounen"
                            android:textSize="16sp"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/synopsisSection"
                        android:layout_below="@id/detailsSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="#FFFFFF">

                        <View
                            android:id="@+id/detailsDivider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:id="@+id/tvSynopsisLabel"
                            android:layout_below="@id/detailsDivider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Synopsis"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary"/>

                        <View
                            android:id="@+id/synopsisTitleDivider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:layout_below="@id/tvSynopsisLabel"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:id="@+id/tvSynopsis"
                            android:padding="5dp"
                            android:layout_below="@id/tvSynopsisLabel"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/synopsis" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/visitHummingbird"
                        android:layout_below="@id/synopsisSection"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="View on hummingbird.me"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/visithummingbird"/>
                </RelativeLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/buttonFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:clickable="true"
                    app:borderWidth="0dp"
                    app:elevation="6dp"
                    app:layout_anchor="@id/header"
                    app:layout_anchorGravity="bottom|center" />
            </android.support.design.widget.CoordinatorLayout>
    </ScrollView>
</RelativeLayout>